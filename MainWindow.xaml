<Window x:Class="SQL_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQL_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="850" MinWidth="850" MinHeight="600">
    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="75"/>
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Height="75">
            <Button Content="Поставщики" Margin="10" Width="125"/>
            <Button Content="Склад" Margin="10" Width="125"/>
            <Button Content="Контрагенты" Margin="10" Width="125" Click="Button_Click"/>
            <Button Content="Заказы" Margin="10" Width="125"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="75" Margin="0,484,10,10">
            <Button Content="Выход" Margin="10" Width="125" Click="Button_Click_Exit"/>
        </StackPanel>
    </Grid>
</Window>
